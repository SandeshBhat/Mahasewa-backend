# MahaSeWA Backend - Production Environment Variables
# Copy this to .env on VPS and fill in the values

# Database Configuration
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DATABASE_URL=postgresql://mahasewa_user:CHANGE_THIS_TO_STRONG_PASSWORD@mahasewa-postgres:5432/mahasewa_db

# For external connections (from your local machine or other servers)
# DATABASE_URL_EXTERNAL=postgresql://mahasewa_user:PASSWORD@srv1110921.hstgr.cloud:5433/mahasewa_db

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_THIS_TO_STRONG_REDIS_PASSWORD@mahasewa-redis:6379/0

# For external connections
# REDIS_URL_EXTERNAL=redis://:PASSWORD@srv1110921.hstgr.cloud:6380/0

# PgAdmin Configuration (for database management)
PGADMIN_EMAIL=admin@mahasewa.org
PGADMIN_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Security
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS (Frontend URLs)
CORS_ORIGINS=["https://mahasewa.vercel.app","https://mahasewa.org","https://www.mahasewa.org"]
ALLOWED_HOSTS=["srv1110921.hstgr.cloud","mahasewa.org","www.mahasewa.org","*"]

# Email Configuration (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@mahasewa.org

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=mahasewa-files
AWS_REGION=ap-south-1

# Application Settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Domain
API_DOMAIN=api.mahasewa.org
FRONTEND_DOMAIN=mahasewa.org

